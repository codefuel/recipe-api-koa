{
  "name": "recipe-api-koa",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "check": "npm-run-all pretty lint build test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "pre-push": "npm run test && npm run build",
    "prepare": "husky install",
    "pretty": "prettier --print-width 120 --write '*/src/**/*.ts",
    "start": "ts-node src/server.ts",
    "start:localdev": "nodemon --watch src --ext ts,json --exec ts-node src/server.ts",
    "test": "jest --no-cache --runInBand",
    "test:integration": "npm run test -- --testPathPattern='\\.integration\\.test\\.'",
    "test:unit": "npm run test -- --testPathPattern='\\.unit\\.test\\.'"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "ajv": "^8.17.1",
    "axios": "^1.9.0",
    "http-status-codes": "^2.3.0",
    "husky": "^9.1.7",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa2-swagger-ui": "^5.10.0",
    "swagger-jsdoc": "^6.2.8",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.15.17",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-transform-paths": "^3.5.5"
  }
}
